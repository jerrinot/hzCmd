#!/usr/bin/env bash

path=$1

cd ${path} || exit 0

files=$(find . -type f -name '*.csv' | xargs -n1 basename | sort | uniq)

[[ -z "${files}" ]] && { exit 0; }

while read -r f; do

 mkdir ${f}-charts

 chart-JavaMetrics ${f} ${f}
 mv *.png ${f}-charts

 meta=${${f}}
 meta=${meta%bench.csv}
 meta=${meta%warmup.csv}
 meta=${meta}"meta.txt"
 meta=$(find . -type f -name ${meta} -print -quit)
 echo ${meta}
 cp ${meta} ${f}-charts

done <<< "$files"
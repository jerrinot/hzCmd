#!/usr/bin/env bash

path=$1

cd ${path}

files=$(find . -name *.csv | xargs -n1 basename | sort | uniq)

 #files=$(find . -name *.csv | sort | uniq)


while read -r f; do

 #name=$(basename ${f})
 #dir=$(dirname ${f})

 meta=${f##*.}

 title=$(find . -name ${meta}".meta" -print -quit | xargs -n1 | sort | uniq | xargs -n1 cat )


 mkdir ${f}-charts

 chart-JavaMetrics ${f} ${title}
 mv *.png ${f}-charts

done <<< "$files"
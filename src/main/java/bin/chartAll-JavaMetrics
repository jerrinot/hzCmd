#!/usr/bin/env bash

path=$1

cd ${path}

files=$(find . -name *.csv | xargs -n1 basename | sort | uniq)

 #files=$(find . -name *.csv | sort | uniq)


while read -r f; do

 #name=$(basename ${f})
 #dir=$(dirname ${f})

 mkdir ${f}-charts

 chart-JavaMetrics ${f} ${f}
 mv *.png ${f}-charts

done <<< "$files"
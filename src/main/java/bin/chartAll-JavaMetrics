#!/usr/bin/env bash

path=$1

cd ${path}

#files=$(find . -name *.csv | xargs -n1 basename | sort | uniq)

files=$(find . -name *.csv | sort | uniq)


while read -r f; do

 name=$(basename ${f})

 echo ${name}
 mkdir ${name}-charts

 chart-JavaMetrics ${name} ${f}
 mv *.png ${name}-charts

done <<< "$files"
#!/usr/bin/env bash

count=${1}
imageId=${2}
region=${3}
instanceType={4}
key=${5}
subnetId=${6}
placement=${7}
outputFile=${8}


tryCount=0
while (( ${count} != 0 )) ; do

 aws-create ${count} ${imageId} ${region} ${instanceType} ${key} ${subnetId} ${placement} ${outputFile}
 aws-Terminate-brokenBox ${outputFile}
  count=$?

 if (( tryCount++ > 2 )) ; then
   aws-terminate ${outputFile}
   exit 1;
 fi

done
